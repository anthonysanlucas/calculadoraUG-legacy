---
interface Props {
  formId: string
}

const { formId } = Astro.props
---

<form id={formId} class="form">
  <fieldset class="form__inputs">
    <slot name="inputs" />
  </fieldset>
  <div class="form__actions">
    <slot name="actions" />
  </div>
</form>

<style>
  .form {
    display: grid;
    grid-template-rows: repeat(2, 1fr);
    row-gap: 1rem;
    place-content: center;
    margin: 1rem auto;
    padding-left: 1rem;
    padding-right: 1rem;
    width: min(100%, 40rem);
    font-size: var(--regular-fs);
  }

  .form__inputs {
    display: grid;
    border: none;
    row-gap: 0.5rem;
  }

  .form__actions {
    display: flex;
    row-gap: 1rem;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  @media (min-width: 23rem) {
    .form {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: none;
    }
  }
</style>
